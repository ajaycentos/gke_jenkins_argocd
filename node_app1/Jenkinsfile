pipeline {
    agent {
        label 'agent-nodes'
    }
    environment {
        // Replace 'dockerhub-credentials' with your actual credentials ID from Jenkins
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
        tag = sh(returnStdout: true, script: "git rev-parse --short=10 HEAD").trim()
    }
    stages {
        stage('Docker Build and Push') {
            agent {
                label 'agent-nodes'
            }
            steps {
                checkout scm

                sh '''
                cd node_app1
                ls -l
                docker build -t ajay/sampleapp:${tag} .
                '''

                // Docker login and push
                script {
                    echo "Logging in to Docker Hub"
                    sh "echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin"

                    echo "Pushing Docker image to Docker Hub"
                    sh "docker push ajay/sampleapp:${tag}"

                    echo "Docker image pushed: ajay/sampleapp:${tag}"
                }
            }
        }
    }
    post {
        always {
            echo 'Cleaning up Docker images'
            sh 'docker rmi ajay/sampleapp:${tag}'
        }
    }
}

